<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:radioButtonStyle">@style/MyRadioButtonStyle</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/mainBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BaseButton"
        parent="Widget.AppCompat.Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/burningFireColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minWidth">250dp</item>
    </style>
    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">

        <item name="buttonTint">@drawable/my_radio_button_style</item>
    </style>

    <item name="login" type="id" />
</resources>
